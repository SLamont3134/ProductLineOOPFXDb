  </columnConstraints>
  <rowConstraints>
    <RowConstraints />
  </rowConstraints>
  <children>
    <TabPane prefHeight="590.0" prefWidth="777.0" stylesheets="@OOPStyleSheet.css" tabClosingPolicy="UNAVAILABLE">
      <tabs>
        <Tab text="Product Line">
          <content>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" stylesheets="@OOPStyleSheet.css">
              <children>
                <GridPane alignment="CENTER" layoutX="1.0" layoutY="-3.0" prefHeight="281.0" prefWidth="777.0">
                  <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  <children>
                    <Label alignment="CENTER" prefHeight="116.0" prefWidth="393.0" text="Product Name" textAlignment="JUSTIFY">
                      <font>
                        <Font size="36.0" />
                      </font>
                    </Label>
                    <TextField fx:id="productNameWindow" prefHeight="89.0" prefWidth="388.0" GridPane.columnIndex="1" />
                    <TextField fx:id="manufacturerNameWindow" layoutX="399.0" layoutY="58.0" prefHeight="89.0" prefWidth="388.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label alignment="CENTER" layoutX="10.0" layoutY="45.0" prefHeight="116.0" prefWidth="393.0" text="Manufacturer" textAlignment="JUSTIFY" GridPane.rowIndex="1">
                      <font>
                        <Font size="36.0" />
                      </font>
                    </Label>
                    <Label alignment="CENTER" layoutX="10.0" layoutY="230.0" prefHeight="116.0" prefWidth="393.0" text="Item Type" textAlignment="JUSTIFY" GridPane.rowIndex="2">
                      <font>
                        <Font size="36.0" />
                      </font>
                    </Label>
                    <ChoiceBox fx:id="itemTypeCB" prefHeight="78.0" prefWidth="388.0" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP" />
                    <Button fx:id="addButton" mnemonicParsing="false" onAction="#addButtonAction" prefHeight="35.0" prefWidth="388.0" text="Add Product" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
                      <font>
                        <Font size="18.0" />
                      </font>
                    </Button>
                  </children>
                </GridPane>
                <TableView fx:id="existingProductWindow" layoutX="1.0" layoutY="277.0" prefHeight="275.0" prefWidth="778.0" stylesheets="@OOPStyleSheet.css">
                  <columns>
                              <TableColumn prefWidth="776.0" text="Existing Products">
                                 <columns>
                          <TableColumn fx:id="productNameColumn" prefWidth="200.0" text="Name" />
                                    <TableColumn fx:id="productIDColumn" prefWidth="156.7999725341797" text="Product ID" />
                                    <TableColumn fx:id="productTypeColumn" prefWidth="135.20001220703125" text="Type" />
                                    <TableColumn fx:id="productManufacturerColumn" maxWidth="300.0" prefWidth="483.20001220703125" text="Manufacturer" />
                                 </columns>
                              </TableColumn>
                  </columns>
                </TableView>
              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab text="Product">
          <content>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: grey;" stylesheets="@OOPStyleSheet.css">
              <children>
                <Label layoutX="14.0" prefHeight="79.0" prefWidth="216.0" text="Choose Product">
                  <font>
                    <Font size="24.0" />
                  </font>
                </Label>
                <ListView fx:id="chooseProductWindow" layoutX="9.0" layoutY="51.0" prefHeight="374.0" prefWidth="759.0" />
