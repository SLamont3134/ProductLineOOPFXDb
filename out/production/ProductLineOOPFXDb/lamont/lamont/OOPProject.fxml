              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab text="Production Log">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" stylesheets="@OOPStyleSheet.css">
