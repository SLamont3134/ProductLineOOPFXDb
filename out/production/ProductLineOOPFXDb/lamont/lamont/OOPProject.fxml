                  <font>
                    <Font size="24.0" />
                  </font>
                </Label>
                <ComboBox fx:id="chooseQtyBox" layoutX="268.0" layoutY="437.0" prefHeight="43.0" prefWidth="500.0" />
                <Button fx:id="recordProductionBttn" layoutX="345.0" layoutY="486.0" mnemonicParsing="false" onAction="#recordProductionBttnAction" prefHeight="45.0" prefWidth="345.0" text="Record Production">
