                <AnchorPane layoutX="-3.0" layoutY="-3.0" prefHeight="555.0" prefWidth="783.0" stylesheets="@OOPStyleSheet.css">
                  <children>
                    <TextArea fx:id="productionLogTextArea" layoutX="17.0" layoutY="15.0" prefHeight="518.0" prefWidth="747.0" />
                  </children>
                </AnchorPane>
              </children>
            </AnchorPane>
          </content>
        </Tab>
      </tabs>
    </TabPane>
  </children>
</GridPane>
